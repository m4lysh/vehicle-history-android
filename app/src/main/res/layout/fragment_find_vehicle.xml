<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/search_form_vertical_padding"
        android:orientation="vertical"
        android:paddingLeft="@dimen/search_form_side_padding"
        android:paddingRight="@dimen/search_form_side_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/PrimaryCircleTextView"
                android:text="1"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/PrimaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/input_plate"
                    android:layout_gravity="center_horizontal"/>

                <EditText
                    android:id="@+id/plate_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"
                    android:hint="@string/plate_hint"
                    android:lines="1"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/search_form_vertical_padding"
            android:orientation="horizontal">

            <TextView
                style="@style/PrimaryCircleTextView"
                android:text="2"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/PrimaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/input_vin"
                    android:layout_gravity="center_horizontal"/>

                <EditText
                    android:id="@+id/vin_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"
                    android:hint="@string/vin_hint"
                    android:lines="1"
                    android:nextFocusDown="@+id/registration_edit_text"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/search_form_vertical_padding"
            android:orientation="horizontal">

            <TextView
                style="@style/PrimaryCircleTextView"
                android:text="3"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/PrimaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/input_registration_date"
                    android:layout_gravity="center_horizontal"/>

                <EditText
                    android:id="@+id/registration_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/first_registration_hint"
                    android:lines="1"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/pick_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_button"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:src="@drawable/calendar"/>

        </LinearLayout>

        <ViewAnimator
            android:id="@+id/find_vehicle_animator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/search_form_vertical_padding"
            android:layout_marginBottom="@dimen/search_form_vertical_padding">

            <Button
                android:id="@+id/find_vehicle_button"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/post_search_form"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

        </ViewAnimator>

    </LinearLayout>

</ScrollView>