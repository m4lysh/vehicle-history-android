<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:minHeight="52dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/timeline_date"
        style="@style/SecondaryText"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_gravity="center"
        android:gravity="center_vertical|right"/>

    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="match_parent">

        <View style="@style/VehicleInfoLineVertical"/>

        <ImageView
            android:id="@+id/timeline_circle"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:elevation="4dp"
            android:src="@drawable/ok"
            android:padding="6dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_amber"
            android:layout_gravity="center"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="13"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/timeline_description"
            style="@style/PrimaryText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            tools:text="asdasd"/>

        <TextView
            android:id="@+id/timeline_extras"
            style="@style/SecondaryText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:text="asdasd\nawdwdwdwdwd\nffsafsdfasdfdsa"/>

    </LinearLayout>

</LinearLayout>